@rendermode InteractiveServer
<h3>PostFoodItemForm</h3>
<EditForm Model="@Model" method="post" OnValidSubmit="@OnValidSubmit" FormName="create">
    <label for="fooditem-brand">Brand</label>
    <InputText @bind-Value="Model.Brand" id="fooditem-brand"></InputText>
    <label for="fooditem-productname">Product name</label>
    <InputText @bind-Value="Model.ProductName" id="fooditem-productname"></InputText>
    <label for="fooditem-protein">Protein</label>
    <InputNumber @bind-Value="Model.Protein" id="fooditem-protein"></InputNumber>
    <label for="fooditem-carbohydrate">Carbohydrate</label>
    <InputNumber @bind-Value="Model.Carbohydrate" id="fooditem-carbohydrate"></InputNumber>
    <label for="fooditem-fat">Fat</label>
    <InputNumber @bind-Value="Model.Fat" id="fooditem-fat"></InputNumber>
    <label for="fooditem-kcal">kCal</label>
    <InputNumber @bind-Value="Model.KCal" id="fooditem-kcal"></InputNumber>
    <label for="fooditem-unit">Unit</label>
    <InputSelect @bind-Value="Model.Unit" id="fooditem-unit">
        <option value="grams">Grams</option>
        <option value="ml">Milliliters</option>
    </InputSelect>
    <button type="submit">Create</button>
</EditForm>