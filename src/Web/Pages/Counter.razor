@page "/counter"
@using Microsoft.Extensions.Logging
@using NutritionTracker.Web.Components.Forms
@inject ILogger<Counter> Logger;
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<ButtonPrimary @onclick="IncrementCount">Click me</ButtonPrimary>
<InputText @bind-Value="TextValue" class="form-check-input w-50"></InputText>